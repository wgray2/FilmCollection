@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<IS_413_Assignemnt_3.Models.Movie>
<div>
    <h2>Here are your movies</h2>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To:</th><th>Notes</th></tr>
        </thead>
        <tbody>
            @foreach (IS_413_Assignemnt_3.Models.Movie x in Model)
            {
                
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <a asp-action="EditMovie" asp-route-movid="@x.MovieID">Edit</a>
                </td>
                <td>
                    <form asp-action="DeleteMovie" method="post">
                        <input type="hidden" name="movid" value="@x.MovieID" />
                        <button type="submit">Delete</button>
                    </form>
                </td>

            </tr>
                
            }
        </tbody>
    </table>
</div>